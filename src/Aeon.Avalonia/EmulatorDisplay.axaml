<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Aeon.Emulator.Launcher.EmulatorDisplay"
        xmlns:local="clr-namespace:Aeon.Emulator.Launcher"
        MinWidth="160" MinHeight="100"
	    Background="Transparent"
	    Focusable="True">
	<UserControl.Styles>
		<Style Selector="UserControl:focus">
		</Style>
	</UserControl.Styles>
	<UserControl.Resources>
		<Pen x:Key="blackPen" Brush="Black" Thickness="1" />
		<DrawingImage x:Key="defaultArrow">
			<DrawingImage.Drawing>
				<GeometryDrawing Brush="White" Geometry="{x:Static local:Geometries.Arrow}" Pen="{StaticResource blackPen}" />
			</DrawingImage.Drawing>
		</DrawingImage>
	</UserControl.Resources>
	<Viewbox Name="outerViewbox">
		<Canvas Name="displayArea">
			<Image Name="displayImage" Stretch="None"
			RenderOptions.BitmapInterpolationMode="Default" />
			<Rectangle Name="cursorRectangle" Width="8" Height="2" Fill="Gray" IsVisible="False" />
			<Image Name="mouseImage" Source="{StaticResource defaultArrow}" IsVisible="False" />
		</Canvas>
	</Viewbox>
</UserControl>
