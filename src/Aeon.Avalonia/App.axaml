<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Aeon.Avalonia"
             x:Class="Aeon.Avalonia.App">
	<Application.Styles>
		<FluentTheme Mode="Light"/>
	</Application.Styles>
	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary>
					<LinearGradientBrush x:Key="BackgroundGradient">
						<GradientStop Offset="0" Color="SteelBlue" />
						<GradientStop Offset="1" Color="#FF1D4461" />
					</LinearGradientBrush>
				</ResourceDictionary>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Application.Resources></Application>
